# Copy this file to .env and fill values

# Discord bot token
DISCORD_TOKEN=

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Folder inside the container where to store recordings
RECORDINGS_DIR=/app/recordings
# Container name
CONTAINER_NAME=discord-voice-bot-1

# Mix all tracks into a single MP3 (true/false)
MERGE_TRACKS=true
# Also save per-user tracks (true/false)
SAVE_INDIVIDUAL=false
# Create output zip (true/false)
ZIP_RECORDINGS=false

# MP3 bitrate (e.g., 64k, 96k, 128k)
MP3_BITRATE=64k

# Host user IDs so the container can write with your permissions (optional)
# On Linux you can set them with: HOST_UID=$(id -u) and HOST_GID=$(id -g)
HOST_UID=
HOST_GID=


